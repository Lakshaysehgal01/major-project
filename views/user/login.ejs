<%- layout("./layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-6 offset-3">
    <h2 class="mt-3">Login&nbsp; to&nbsp; VentureVista</h2>
    <form method="post" action="/login" class="needs-validation" novalidate>
      <div class="mb-3 mt-4">
        <label for="username" class="form-label mb-2">Username : </label>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          required
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="password" class="form-label mb-2">Password : </label>
        &nbsp;&nbsp;&nbsp;
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          required
        />
      </div>
      <button class="btn btn-danger mt-3">Login</button>
    </form>
  </div>
</div>
