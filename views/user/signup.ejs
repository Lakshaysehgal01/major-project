<%- layout("./layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-6 offset-3">
    <h2 class="mt-3">Become&nbsp; a&nbsp; Member &nbsp;of &nbsp;VentureVista</h2>
    <form method="post" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3 mt-4">
        <label for="username" class="form-label mb-2">Username : </label>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a username</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="email" class="form-label mb-2">Email : </label>
        &nbsp;&nbsp;&nbsp;
        <input
          id="email"
          type="email"
          class="form-control"
          name="email"
          required
        />
        <div class="invalid-feedback">Please enter a Email</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="password" class="form-label mb-2">Password : </label>
        &nbsp;&nbsp;&nbsp;
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          required
        />
        <div class="invalid-feedback">Please enter a Password</div>
      </div>
      <button class="btn btn-danger mt-3">Signup</button>
    </form>
  </div>
</div>
