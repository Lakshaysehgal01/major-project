<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-4">
    <div class="col-8 offset-2 mt-3">
      <h2>Revise the listing particulars...</h2>
      <form method="post" action="/listing/<%=listing._id%>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-4">
          <label for="title" class="form-label">Title : </label>
          &nbsp;&nbsp;&nbsp;
          <input
            id="title"
            type="text"
            class="form-control"
            value="<%=listing.title%>"
            name="listing[title]"
            required
          />
          <div class="invalid-feedback">Please enter a valid title</div>
        </div>
        <div class="mb-4">
          <label for="description" class="form-label">Description : </label>
          &nbsp;&nbsp;&nbsp;
          <textarea
            id="description"
            placeholder="Write description ..."
            name="listing[description]"
            class="form-control"
            required
          >
<%=listing.description%></textarea
          >
          <div class="invalid-feedback">Please enter a valid Description</div>
        </div>
        <div class="mb-4">
          Original pic<br>
          <img src="<%=link%>" width="350px" height="250px" >
        </div>
        <div class="mb-4">
          <label for="image" class="form-label">Upload New Image : </label>
          &nbsp;&nbsp;&nbsp;
          <input
            type="file"
            class="form-control"
            id="image"
            name="listing[image]"
          />
        </div>
        <div class="row mb-4">
          <div class="col-md-4">
            <label for="price" class="form-label">Price : </label>
            &nbsp;&nbsp;&nbsp;
            <input
             type="number" 
              placeholder="Write Price"
              id="price"
              value="<%=listing.price%>"
              class="form-control"
              name="listing[price]"
              required
            />
            <div class="invalid-feedback">Please enter a valid Price</div>
          </div>
          <div class="col-md-8">
            <label for="country" form="form-label">Country : </label>
            &nbsp;&nbsp;&nbsp;
            <input
              type="text"
              placeholder="Write Country"
              name="listing[country]"
              id="country"
              class="form-control"
              value="<%=listing.country%>"
              required
            />
            <div class="invalid-feedback">Please enter a valid Country</div>
          </div>
        </div>
        <div class="mb-4">
          <label for="location" class="form-label">Location : </label>
          &nbsp;&nbsp;&nbsp;
          <input
            type="text"
            placeholder="Write location"
            class="form-control"
            name="listing[location]"
            value="<%=listing.location%>"
            id="location"
            required
          />
          <div class="invalid-feedback">Please enter a valid Location</div>
        </div class="mb-4">

        <button class="btn btn-success mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
